<h1>Listing notifications</h1>

<table>
  <thead>
    <tr>
      <th>Dept naem</th>
      <th>Dept email</th>
      <th>Mandatory</th>
      <th>Lead time</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @notifications.each do |notification| %>
      <tr>
        <td><%= notification.dept_naem %></td>
        <td><%= notification.dept_email %></td>
        <td><%= notification.mandatory %></td>
        <td><%= notification.lead_time %></td>
        <td><%= link_to 'Show', notification %></td>
        <td><%= link_to 'Edit', edit_notification_path(notification) %></td>
        <td><%= link_to 'Destroy', notification, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

